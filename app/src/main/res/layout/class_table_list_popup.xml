<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classTableTeatcherName"
        android:text="Mahmoud tarek"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/teacher_card_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/classTableclassTableSubjectTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Math"
            android:gravity="center"
            android:textSize="24sp"
            android:background="#d9b8ba"/>
        <TextView
            android:id="@+id/classTableclassTableSubjectDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="Date"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@color/design_default_color_secondary_variant"/>
        <TextView
            android:id="@+id/classTableclassTableSubjectTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Time"
            android:gravity="center"
            android:textSize="24sp"
            android:background="#d9b8ba"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/cardview_dark_background"/>

</LinearLayout>