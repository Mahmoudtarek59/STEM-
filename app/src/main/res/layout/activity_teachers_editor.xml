<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeachersEditor"
    android:background="@color/teacher_card_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ET_Teacher_Editor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Full Name"
            android:inputType="text"
            tools:text="Full Name"
            android:paddingBottom="10dp"
            android:textColor="@color/white_background"
            android:textColorHint="@color/white_background" />

        <EditText
            android:id="@+id/ET_Teacher_Editor_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            tools:text="E-Mail"
            android:paddingBottom="10dp"
            android:textColor="@color/white_background"
            android:textColorHint="@color/white_background"/>

        <EditText
            android:id="@+id/ET_Teacher_Editor_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Phone Number"
            android:inputType="number"
            tools:text="Phone"
            android:paddingBottom="10dp"
            android:textColor="@color/white_background"
            android:textColorHint="@color/white_background"/>
        <EditText
            android:id="@+id/ET_Teacher_Editor_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="ID"
            android:inputType="text"
            tools:text="ID"
            android:paddingBottom="10dp"
            android:textColor="@color/white_background"
            android:textColorHint="@color/white_background"/>

        <EditText
        android:id="@+id/ET_Teacher_Editor_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="User Name"
        android:inputType="text"
        tools:text="User Name"
        android:paddingBottom="10dp"
        android:textColor="@color/white_background"
        android:textColorHint="@color/white_background"/>

        <EditText
            android:id="@+id/ET_Teacher_Editor_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Password"
            android:inputType="text"
            tools:text="Password"
            android:paddingBottom="10dp"
            android:textColor="@color/white_background"
            android:textColorHint="@color/white_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:paddingBottom="10dp">

            <Spinner
                android:id="@+id/gradeSpinner"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:entries="@array/grade_arrays"
                android:prompt="@string/grade_prompt"
                />

            <Spinner
                android:id="@+id/classSpinner"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:entries="@array/class_arrays"
                android:prompt="@string/class_prompt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:paddingBottom="10dp">

            <Spinner
                android:id="@+id/subjectSpinner"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:entries="@array/subject_arrays"
                android:prompt="@string/subject_prompt" />

            <TextView
                android:id="@+id/SubjectDate"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Select a Date"
                android:gravity="center"
                android:textColor="@color/white_background" />
        </LinearLayout>
        <TextView
            android:id="@+id/SubjectTime"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Select Time"
            android:gravity="center"
            android:textColor="@color/white_background" />
        <Button
            android:id="@+id/teacher_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_rounded_shap"
            android:layout_margin="20dp"
            android:text="Submit" />

    </LinearLayout>
</ScrollView>